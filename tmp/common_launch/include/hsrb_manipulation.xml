<?xml version="1.0"?>
<launch>
  <arg name="namespace" default="/hsrb" />
  <arg name="sim" default="false" />
  <arg name="robot_name" default="hsrb" />
  <arg name="agent_num"/>

  <remap from="/camera/depth_registered/points" to="$(arg namespace)/head_rgbd_sensor/depth_registered/rectified_points"/>

  <include file="$(find tmp)/common_launch/include/hsrb_manipulation_common.xml">
    <arg name="namespace" value="$(arg namespace)" />
    <arg name="sim" value="$(arg sim)" />
    <arg name="agent_num" value="$(arg agent_num)"/>
  </include>

  <!-- プランナを動かす -->
  <include file="$(find hsrb_manipulation_launch)/launch/planner.launch">
    <arg name="analytic_ik_plugin" value="hsrb_analytic_ik::HsrbIKSolver" />
  </include>

  <!-- perspective transformer -->
  <include file="$(find hsrb_manipulation_launch)/launch/interactive_grasp_planner.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include>

</launch>

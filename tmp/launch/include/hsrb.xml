<launch>
    <arg name="robot_pos" default=""/>
    <arg name="gazebo_visualization" default="true"/>
    <arg name="use_laser_odom" default="true" />
    <arg name="fast_physics" default="false" />
    <arg name="robot_name" default="hsrb" />
    <arg name="agent_num" />

    <include file="$(find tmp)/launch/include/hsrb_no_controllers.xml" pass_all_args="true">
        <arg name="agent_num" value="$(arg agent_num)" />
    </include>

    <include file="$(find tmp)/launch/include/hsrb_default_controllers.xml">
        <arg name="use_laser_odom" value="$(arg use_laser_odom)" />
        <arg name="agent_num" value="$(arg agent_num)" />
    </include>

</launch>
